      %h2.title ログイン情報入力
      .to-registration
        = link_to new_user_registration_path do
          新規会員登録はコチラ
      .deviseForm
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          -# = devise_error_messages!
          .deviseForm__field.deviseForm__field--top
            = f.label :名前
            %span.formRequired 必須
            %br/
            = f.text_field :name, autofocus: true, autocomplete: "off", placeholder: "例）える子", class: "inputField", required: true
          .deviseForm__field
            = f.label :メールアドレス
            %span.formRequired 必須
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "inputField", required: true
          - if @user.password.present?
            = hidden_field_tag :sns_auth, true
            = f.password_field :password, value: @user.password, style: "display: none;"
            = f.password_field :password_confirmation, value: @user.password_confirmation, style: "display: none;"
          -else
            .deviseForm__field
              = f.label :パスワード
              %span.formRequired 必須
